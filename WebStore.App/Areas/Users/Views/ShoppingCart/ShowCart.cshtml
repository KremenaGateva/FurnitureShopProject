@model ShoppingCartViewModel


@{
    ViewData["Title"] = "My Shopping Cart";
}

<h2>My Shopping Cart</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @Html.DisplayFor(m => m.Items)
    </tbody>
</table>

<h3 class="text-right"><strong>Total order sum:</strong> @Model.TotalOrderPrice</h3>
<a asp-area="Users" asp-controller="Orders" asp-action="MakeOrder" asp-route-id="@Model.Id" class="btn btn-success btn-lg btn-block mt-5">Finish Order</a>