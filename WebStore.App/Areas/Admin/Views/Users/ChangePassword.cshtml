@model ResetPasswordBindingModel

@{
    ViewData["Title"] = "Change Password";
}

<h2>Change Password</h2>

<form asp-area="Admin" asp-controller="Users" asp-action="ChangePassword" method="post" class="form-horizontal">
    @Html.HiddenFor(model => model.Id)
    @Html.FormGroupFor(model => model.NewPassword)
    @Html.FormGroupFor(model => model.ConfirmPassword)
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Change" class="btn btn-success" />
            <input type="reset" class="btn btn-default" value="Cancel">
        </div>
    </div>
</form>