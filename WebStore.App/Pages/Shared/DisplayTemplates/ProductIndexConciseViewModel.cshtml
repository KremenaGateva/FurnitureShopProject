@model ProductIndexConciseViewModel

<div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
        <a asp-page="/Products/Details" asp-route-id="@Model.Id">
            <img style="width:350px; height: 250px" class="card-img-top" src="@Model.ImagePath" alt="">
        </a>
        <div class="card-body">
            <h4 class="card-title">
                <a asp-page="/Products/Details" asp-route-id="@Model.Id">@Model.Name</a>
            </h4>
            <h5>$@Model.SellPrice.ToString("f2")</h5>
            <p class="card-text">@Model.ShortDescription</p>
        </div>
        <div class="card-footer">
            <small class="text-muted"></small>
        </div>
    </div>
</div>