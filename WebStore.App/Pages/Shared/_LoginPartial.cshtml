@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="nav-link">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Users" asp-controller="ShoppingCart" asp-action="ShowCart" title="My Shopping Cart">
                    <i class="fa fa-shopping-cart"></i>Shopping Cart
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Users" asp-controller="Orders" asp-action="All">My Orders</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link nav-link" title="Logout">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Register" class="nav-link" title="Create new account"><i class="fa fa-user-plus"></i></a></li>
        <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Login" class="nav-link" title="Log in"><i class="fa fa-sign-in-alt"></i></a></li>
    </ul>
}