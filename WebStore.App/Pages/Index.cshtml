@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <h1 class="my-4">Furniture shop</h1>
            <div class="list-group">
                @Html.DisplayFor(m => m.CategoriesModels)
            </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">
            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img style="width:1120px; height:350px" class="d-block img-fluid" src="http://becomingbottos.com/wp-content/uploads/2018/04/ashley-furniture-northridge-home-furniture-store-furniture-credit-card-6-things-to-know-credit-panda-minimalist-ashley-furniture-store-in-northridge-ca.jpg" alt="Welcome">
                    </div>
                    <div class="carousel-item">
                        <img style="width:1120px; height:350px" class="d-block img-fluid" src="http://peacid.com/img/2018/04/all-furniture-charlotte-affordable-westheimer-italian-soho-for-yelp-store-bdi-floor-beverly-tulsa-usa-chocolate-wood-warehouse-manhattan-queens-interior-console-lifestyle-modern-da.jpg" alt="Modern furniture">
                    </div>
                    <div class="carousel-item">
                        <img style="width:1120px; height:350px" class="d-block img-fluid" src="https://images.modani.com/modani/wysiwyg/city-pages/nyc-midtown-1.jpg?format=jpg" alt="Comfortable furniture">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="container text-center pb-3">
        <h2>Latest products from our catalog:</h2>
    </div>
    <div class="row">
        @Html.DisplayFor(m => m.ProductsModels)
    </div>
</div>